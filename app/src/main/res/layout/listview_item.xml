<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llListView"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"

        android:text="Task"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/cbTask" />

    <CheckBox
        android:theme="@style/ListViewCheckBox"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbTask"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"

        android:layout_alignBottom="@+id/tvTask"
        android:layout_toRightOf="@+id/ivTag"
        android:layout_marginBottom="4dp"/>

    <ImageView
        android:src="@color/highPriority"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:id="@+id/ivTag"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tvDueDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="27 October 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:textSize="10dp"
        android:id="@+id/tvDueDate"
        android:layout_below="@+id/tvTask"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>